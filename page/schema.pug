doctype html
html(lang='en')

  head
    meta(charset='utf-8')
    title CosmWasm JSON Schema Viewer and Converter Â· Fadroma by Hack.bg
    script(data-goatcounter="https://goat.fadroma.hack.bg/count" async src="//goat.fadroma.hack.bg/count.js")
    style(type="text/css")
      include ../assets/fonts.css
      include ../assets/style.css

  body.schema-converter

    svg(
      style="position:absolute;width:0;height:0;overflow:hidden"
      version="1.1"
      xmlns="http://www.w3.org/2000/svg"
      xmlns:xlink="http://www.w3.org/1999/xlink"
    )
      defs
        each icon in self.icons
          symbol(id=icon.id viewBox=icon.viewBox)
            title= icon.title
            path(d=icon.path)

    mixin icon (id)
      svg(class=`icon icon-${id}`)
        use(xlink:href=`#${id}`)

    header.schema-converter-header
      h1 Fadroma Schema
      .schema-converter-input
        strong Upload from:
        button#upload-from-url URL
        button#upload-from-file File
        button#upload-from-clipboard Clipboard
      .schema-converter-input
        strong Download as:
        button HTML
        button Markdown
        button JSON (pretty)
        button JSON (compact)
        button YAML

    content.schema-converter-output

      section.schema-converter-metadata
        strong Metadata
        .schema-converter-output-field Name
        .schema-converter-output-field Version
        .schema-converter-output-field IDL version
        .schema-converter-output-field Description
        br
        strong API
        .schema-converter-output-api Instantiate
        .schema-converter-output-api Execute
        .schema-converter-output-api Query
        .schema-converter-output-api Migrate
        .schema-converter-output-api Sudo
        .schema-converter-output-api Responses

      section.schema-converter-body

      section.schema-converter-definitions
        strong Definitions

    footer
      span This tool is part of
      strong
        a.logo(href="https://github.com/hackbg/fadroma") Fadroma
      span by
      strong
        a.logo(href="https://hack.bg") Hack.bg

    .schema-converter-modal(style="display:none;visibility:hidden")
      .schema-converter-modal-background
      .schema-converter-modal-content
        strong Upload contract schema from URL:
        input.schema-converter-modal-input(type="text" size="50" placeholder="enter URL here")
        div
          button.schema-converter-modal-upload Upload
          button.schema-converter-modal-cancel Cancel
        .schema-converter-modal-error

    script(type="module" src="page/schema.gui.mjs")

{
  "name": "@fadroma/project",
  "version": "1.0.0",
  "type": "module",
  "main": "./Project.ts",
  "files": [ "*.ts" ],
  "description": "Create a new Fadroma project.",
  "scripts": {
    "check": "tsc --noEmit",
    "test":  "ensuite create.spec.ts",
    "cov":   "ensuite-cov -r text -- build.spec.ts.md",
    "lcov":  "ensuite-cov -r lcov -- build.spec.ts.md",
    "ubik":  "npm run check && npm test && ubik"
  },
  "peerDependencies": {
    "@hackbg/ganesha": "^2.2.5"
  },
  "peerDependenciesMeta": {
    "@hackbg/ganesha": { "optional": true, "description": "For fadroma-build command." }
  },
  "dependencies": {
    "@fadroma/core": "workspace:2.0.4",
    "@hackbg/file":  "workspace:^1",
    "@hackbg/logs":  "workspace:^1",
    "@hackbg/cmds":  "workspace:^1.1.4",
    "@hackbg/conf":  "workspace:^1",
    "case":       "^1.6.3",
    "dotenv":     "^16.0.1",
    "simple-git": "^3.7.1",
    "prompts":    "^2.4.2"
  },
  "devDependencies": {
    "@hackbg/ensuite": "^1.1",
    "@types/prompts": "^2.4.2"
  }
}

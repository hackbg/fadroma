{
  "name":    "@fadroma/build",
  "version": "1.0.0-beta.0",
  "type":    "module",
  "main":    "./build.ts",
  "description": "Build smart contracts with or without container.",
  "bin": { "fadroma-build": "build.cli.cjs" },
  "scripts": {
    "ts:check":    "tsc --noEmit",
    "release:dry": "pnpm ts:check && izomorf dry",
    "release:wet": "pnpm ts:check && izomorf wet --access=public"
  },
  "peerDependencies": {
    "@hackbg/ganesha": "^2.2.5"
  },
  "peerDependenciesMeta": {
    "@hackbg/ganesha": {
      "optional": true,
      "description": "For fadroma-deploy command."
    }
  },
  "dependencies": {
    "@fadroma/client": "workspace:^4",
    "@hackbg/dokeres": "^4.0.2",
    "@hackbg/formati": "^1.0.2",
    "@hackbg/kabinet": "^3.0.6",
    "@hackbg/konzola": "^1.1.1",
    "@hackbg/komandi": "workspace:*",
    "@hackbg/portali": "workspace:*",
    "json-schema-to-typescript": "^10.1.5",
    "line-transform-stream": "^0.1.0",
    "simple-git": "^3.7.1",
    "toml":       "^3.0.0"
  }
}

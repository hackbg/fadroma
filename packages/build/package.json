{
  "name":    "@fadroma/build",
  "version": "2.0.0",
  "type":    "module",
  "main":    "./build.ts",
  "files":   [ "build.ts", "build.impl.mjs" ],
  "description": "Build smart contracts with or without container.",
  "bin": { "fadroma-build": "build.cli.cjs" },
  "scripts": {
    "check": "tsc --noEmit",
    "test":  "ensuite build.spec.ts.md",
    "cov":   "ensuite-cov -r text -- build.spec.ts.md",
    "lcov":  "ensuite-cov -r lcov -- build.spec.ts.md",
    "ubik":  "npm run check && npm test && ubik"
  },
  "peerDependencies": {
    "@hackbg/ganesha": "^2.2.5"
  },
  "peerDependenciesMeta": {
    "@hackbg/ganesha": { "optional": true, "description": "For fadroma-build command." }
  },
  "dependencies": {
    "@fadroma/client": "workspace:^6.0.1",
    "@hackbg/dokeres": "workspace:^4.4.2",
    "@hackbg/formati": "workspace:^5.1.1",
    "@hackbg/kabinet": "workspace:^3.2.6",
    "@hackbg/konzola": "workspace:^2.1",
    "@hackbg/komandi": "workspace:^6.1.3",
    "@hackbg/konfizi": "workspace:^3.0.1",
    "dotenv":     "^16.0.1",
    "simple-git": "^3.7.1"
  },
  "devDependencies": {
    "@hackbg/ensuite": "^1.1"
  }
}

{
  "name":    "@fadroma/build",
  "version": "2.0.0",
  "type":    "module",
  "main":    "./build.ts",
  "files":   [ "build.ts", "build.impl.mjs" ],
  "description": "Build smart contracts with or without container.",
  "bin": { "fadroma-build": "build.cli.cjs" },
  "scripts": {
    "test":        "ganesha-node build.spec.ts.md",
    "ts:check":    "tsc --noEmit",
    "release:dry": "npm test && npm run ts:check && ubik dry",
    "release:wet": "npm test && npm run ts:check && ubik wet --access=public"
  },
  "peerDependencies": {
    "@hackbg/ganesha": "^2.2.5"
  },
  "peerDependenciesMeta": {
    "@hackbg/ganesha": { "optional": true, "description": "For fadroma-build command." }
  },
  "dependencies": {
    "@fadroma/client": "workspace:^6.0.1",
    "@hackbg/dokeres": "^4.4.2",
    "@hackbg/formati": "^5.1.1",
    "@hackbg/kabinet": "^3.2.6",
    "@hackbg/konzola": "^2.1",
    "@hackbg/komandi": "^6.1.3",
    "@hackbg/konfizi": "^3.0.1",
    "dotenv":     "^16.0.1",
    "simple-git": "^3.7.1"
  },
  "devDependencies": {
    "@hackbg/ganesha": "^2.2.5"
  }
}

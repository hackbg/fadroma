{
  "name":    "@fadroma/core",
  "version": "1.0.0",
  "type":    "module",
  "main":    "core.ts",
  "files": [ "*.ts" ],
  "scripts": {
    "check": "tsc --noEmit",
    "test":  "ensuite client.spec.ts.md",
    "cov":   "ensuite-cov -r text -- client.spec.ts.md",
    "lcov":  "ensuite-cov -r lcov -- client.spec.ts.md",
    "ubik":  "npm run check && npm test && ubik"
  },
  "dependencies": {
    "@hackbg/konzola": "^2.1",
    "@hackbg/komandi": "^6.1.2"
  },
  "devDependencies": {
    "@hackbg/ensuite": "^1.1"
  }
}

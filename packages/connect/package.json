{
  "name":    "@fadroma/connect",
  "version": "2.0.0",
  "type":    "module",
  "main":    "./connect.ts",
  "files":   [ "connect.ts" ],
  "bin": { "fadroma-connect": "connect.cli.cjs" },
  "description": "Catalog of platforms that Fadroma can operate on.",
  "scripts": {
    "ts:check":    "tsc --noEmit",
    "release:dry": "pnpm ts:check && izomorf dry",
    "release:wet": "pnpm ts:check && izomorf wet --access=public"
  },
  "dependencies": {
    "@fadroma/client":     "workspace:^5",
    "@fadroma/devnet":     "workspace:^1",
    "@fadroma/scrt":       "workspace:^2",
    "@fadroma/scrt-amino": "workspace:^2",
    "@fadroma/mocknet":    "workspace:*",
    "@hackbg/komandi":     "workspace:^5",
    "@hackbg/konfizi":     "workspace:^2"
  },
  "peerDependencies": {
    "@fadroma/devnet": "workspace:^1.0.3",
    "@hackbg/ganesha": "^2.2.5"
  },
  "peerDependenciesMeta": {
    "@fadroma/devnet": { "optional": true, "description": "For connecting to local devnet." },
    "@hackbg/ganesha": { "optional": true, "description": "For fadroma-connect command." }
  }
}

{
  "name":    "@fadroma/schema",
  "version": "1.0.0-beta.0",
  "type":    "module",
  "main":    "./schema.ts",
  "description": "Generate JSON schema and TypeScript types from smart contract source.",
  "bin":     { "fadroma-build": "build.cli.cjs" },
  "dependencies": {
    "json-schema-to-typescript": "^10.1.5",
    "toml":       "^3.0.0"
  },
  "scripts": {
    "ts:check":    "tsc --noEmit",
    "release:dry": "pnpm ts:check && izomorf dry",
    "release:wet": "pnpm ts:check && izomorf wet --access=public"
  }
}


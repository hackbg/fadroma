{
  "exclude": [
    ".ubik",
    "*.dist.*",
    "node_modules",
    "toolbox/ganesha",
    "packages/cosmjs-esm",
    "packages/secretjs-esm"
  ],
  "compilerOptions": {
    "target":                       "esnext",
    "module":                       "esnext",
    "moduleResolution":             "node",
    "esModuleInterop":              true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError":                true,
    "skipLibCheck":                 true,
    "experimentalDecorators":       true
  }
}

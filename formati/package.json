{
  "name": "@hackbg/formati",
  "version": "1.0.0",
  "main": "formati.ts",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/hackbg/toolbox",
  "bugs": "https://github.com/hackbg/toolbox/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/hackbg/toolbox",
    "directory": "formati"
  },
  "description": "Data formats.",
  "files": [
    "README.md",
    "formati.ts",
    "dist",
    "types"
  ],
  "dependencies": {
    "@iov/crypto": "^2.5.0",
    "@iov/encoding": "^2.5.0",
    "bech32": "^2.0.0",
    "secure-random": "^1.1.2"
  },
  "scripts": {
    "release:dry": "izomorf 'npm run ts:build' --dry-run",
    "release:wet": "izomorf 'npm run ts:build' --access=public",
    "ts:test": "ganesha-node README.md",
    "ts:check": "tsc --noEmit",
    "ts:clean": "rm -rf dist packages/*/dist packages/*/types",
    "ts:build": "npm run ts:clean && concurrently 'npm:ts:build:*'",
    "ts:build:esm": "tsc --outDir dist/esm --target es6 --module es6 --declaration --declarationDir dist/dts",
    "ts:build:cjs": "tsc --outDir dist/cjs --target es6 --module commonjs"
  }
}

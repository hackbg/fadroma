{
  "name": "@fadroma/cw",
  "version": "1.0.0-rc.4",
  "type": "module",
  "main": "cw.ts",
  "files": [ "*.ts", "okp4/*.ts" ],
  "description": "CosmJS Stargate integration for Fadroma, incl. OKP4 support.",
  "dependencies": {
    "@fadroma/agent":     "workspace:2.0.0-rc.5",
    "@hackbg/conf":       "workspace:3.1.5",
    "@hackbg/cosmjs-esm": "workspace:1.0.0-rc.33",
    "@noble/hashes":      "^1.3.2",
    "@noble/curves":      "^1.2.0"
  },
  "scripts": {
    "check": "time tsc --noEmit",
    "test": "time ensuite cw.test.ts",
    "cov": "time ensuite-cov -r text -r lcov -- cw.test.ts",
    "ubik": "npm run check && npm run cov all && time ubik",
    "schema": "./schema/cw-gen-types.cjs",
    "release": "time pnpm ubik release --access public --otp 123123",
    "release:fast": "time ubik release --access public --otp 123123"
  }
}

{
  "name": "@fadroma/cw",
  "version": "1.0.0-rc.1",
  "type": "module",
  "main": "cw.ts",
  "files": [ "*.ts" ],
  "description": "CosmJS Stargate integration for Fadroma, incl. OKP4 support.",
  "dependencies": {
    "@fadroma/agent":     "workspace:2.0.0-rc.1",
    "@hackbg/conf":       "workspace:3.1.5",
    "@hackbg/cosmjs-esm": "workspace:1.0.0-rc.32",
    "@noble/hashes":      "^1.3.2",
    "@noble/curves":      "^1.2.0"
  },
  "scripts": {
    "check":  "time tsc --noEmit",
    "test":   "time ensuite cw.test.ts",
    "cov":    "time ensuite-cov -r text -r lcov -- cw.test.ts",
    "ubik":   "npm run check && npm run cov all && ubik",
    "schema": "./schema/cw-gen-types.cjs",
    "release": "pnpm ubik --access public --otp 123123"
  }
}

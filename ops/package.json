{
  "name": "@fadroma/ops",
  "version": "3.0.0-rc.24",
  "type": "module",
  "main": "./index.ts",
  "files": [
    "*.ts",
    "**/*.ts",
    "tsconfig.json",
    "build/build.Dockerfile",
    "build/build.impl.mjs",
    "build/build.server.mjs",
    "devnet/devnet.init.mjs",
    "devnet/devnet.server.mjs",
    "devnet/*.Dockerfile"
  ],
  "description": "Devops tooling for smart contract platforms.",
  "scripts": {
    "check": "tsc --noEmit",
    "test":  "cd .. && ensuite spec/Ops.spec.ts.md",
    "cov":   "cd .. && ensuite-cov -r text -r lcov -- spec/Ops.spec.ts.md",
    "ubik":  "npm run check && npm run cov && ubik"
  },
  "peerDependencies": {
    "@hackbg/ganesha": "^4"
  },
  "peerDependenciesMeta": {
    "@hackbg/ganesha": { "optional": true, "description": "For CLI" }
  },
  "dependencies": {
    "@fadroma/connect": "workspace:3.0.0-rc.25",
    "@hackbg/dock": "workspace:^1.3",
    "@hackbg/file": "workspace:^1",
    "@hackbg/port": "workspace:^1",
    "@hackbg/cmds": "workspace:^1.3.1",
    "case":       "^1.6.3",
    "dotenv":     "^16.0.1",
    "js-yaml":    "^4.1.0",
    "prompts":    "^2.4.2",
    "simple-git": "^3.7.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/prompts": "^2.4.2",

    "@hackbg/ensuite": "^1.1"
  }
}

{
  "name":    "@hackbg/fadroma",
  "version": "100.0.0-pre",
  "repository": { "type": "git", "url": "https://github.com/hackbg/fadroma" },
  "type":    "module",
  "main":    "fadroma.ts",
  "browser": "fadroma.browser.ts",
  "description": "CosmWasm dApp framework.",
  "dependencies": {
    "dotenv": "^15.0.1",
    "@fadroma/client":            "workspace:^3",
    "@fadroma/client-scrt":       "workspace:^4",
    "@fadroma/client-scrt-amino": "workspace:^4",
    "@fadroma/client-scrt-grpc":  "workspace:^5",
    "@fadroma/ops":               "workspace:^1",
    "@fadroma/ops-scrt":          "workspace:^1",
    "@fadroma/tokens":            "workspace:^2",
    "@hackbg/ganesha":            "workspace:^2.1",
    "@hackbg/dokeres":            "workspace:*",
    "@hackbg/kabinet":            "workspace:*",
    "@hackbg/komandi":            "workspace:*",
    "@hackbg/konzola":            "workspace:*",
    "@hackbg/formati":            "workspace:*"
  },
  "devDependencies": {
    "typescript":  "^4.7",
    "typedoc":     "^0.22.17",
    "@types/node": "^16.11.36",

    "@hackbg/ensuite": "workspace:*",
    "c8":              "^7.11.3",

    "body-parser":    "^1.20.0",
    "express":        "^4.18.1",
    "freeport-async": "^2.0.0"
  },
  "scripts": {
    "ts:check":    "tsc --noEmit",
    "ts:cov":      "Ganesha_NoSourceMap=1 time npx c8 -r text -n packages ganesha-node spec/index.js",
    "ts:document": "time typedoc --tsconfig ./tsconfig.json --entryPointStrategy packages --entryPoints packages/* --entryPoints toolbox/dokeres --entryPoints toolbox/kabinet --entryPoints toolbox/portali --entryPoints @hackbg/formati --entryPoints .",
    "ts:lcov":     "Ganesha_NoSourceMap=1 time npx c8 -r lcov -n packages ganesha-node spec/index.js",
    "ts:render":   "node doc/render.js",
    "ts:test":     "time ensuite SPEC.ts.md",

    "rs:build:example": "FADROMA_REBUILD=1 FADROMA_BUILD_WORKSPACE_ROOT=. FADROMA_BUILD_WORKSPACE_MANIFEST=_Cargo.toml FADROMA_BUILD_OUTPUT_DIR=fixtures ./fadroma.cjs build"
  },
  "bin": {
    "fadroma": "fadroma.cjs"
  },
  "workspace": true,
  "packages": [
    "./packages/*"
  ],
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "google-protobuf"
      ],
      "allowedVersions": {
        "typescript": "^4.6||^4.7"
      }
    }
  }
}

{
  "name": "@hackbg/fadroma",
  "version": "1.0.0-beta.84",
  "repository": { "type": "git", "url": "https://github.com/hackbg/fadroma" },
  "type": "module",
  "main": "index.ts",
  "browser": "index.browser.ts",
  "description": "CosmWasm dApp framework.",
  "bin": { "fadroma": "fadroma.cli.cjs" },
  "files": [
    "*.ts",
    "Fadroma.svg",
    "!agent/*",
    "!connect/*",
    "!ops/*",
    "!platforms/*",
    "!examples/*",
    "!coverage/*",
    "!target/*"
  ],
  "scripts": {

    "start": "cmds-ts ./FadromaCommands.ts",

    "prepare": "husky install",

    "ubik":     "pnpm i && pnpm clean && pnpm check && pnpm cov && ubik",
    "ubik:all": "time sh -c 'pnpm ubik wet && cd agent && ubik wet && cd ../connect && ubik wet && cd ../ops && ubik wet && cd ../platforms/scrt && ubik wet'",
    "ubik:ops": "time sh -c 'pnpm ubik wet && cd connect && ubik wet && cd ../ops && ubik wet'",

    "check": "time tsc --noEmit",

    "test":       "time ensuite GettingStarted.ts.md",
    "test:agent": "time ensuite agent/Agent.spec.ts.md",
    "test:ops":   "time ensuite ops/Ops.spec.ts.md",

    "cov":   "time ensuite-cov -r text -r lcov -n agent -n connect -n ops -n platforms -- GettingStarted.ts.md",
    "ci":    "node --version && npm --version && pnpm --version && ls -al && pnpm clean && concurrently npm:check npm:cov && pnpm ubik dry && ls -al",
    "clean": "rm -rf *.cjs.js *.esm.js *.d.ts packages/*/dist packages/*/types",

    "build:example": "FADROMA_REBUILD=1 FADROMA_BUILD_WORKSPACE_ROOT=. FADROMA_BUILD_WORKSPACE_MANIFEST=_Cargo.toml FADROMA_BUILD_OUTPUT_DIR=fixtures ./fadroma.cli.cjs build",

    "docs:dev":      "ensuite-dev",
    "docs:render":   "time ensuite-render",
    "docs:typedoc":  "time typedoc --tsconfig ./tsconfig.json --entryPointStrategy packages --entryPoints packages/* --entryPoints platforms/* --entryPoints .",
    "docs:vp:dev":   "vitepress dev",
    "docs:vp:build": "vitepress build",
    "docs:vp:serve": "vitepress serve"

  },
  "dependencies": {
    "@fadroma/agent":   "workspace:*",
    "@fadroma/ops":     "workspace:*",
    "@fadroma/connect": "workspace:*",
    "dotenv": "^16.0.1"
  },
  "peerDependencies": {
    "@hackbg/ganesha": "^4"
  },
  "peerDependenciesMeta": {
    "dotenv":          { "optional": true },
    "@hackbg/ganesha": { "optional": true }
  },
  "devDependencies": {
    "@hackbg/ganesha":      "^2.3.0",
    "@hackbg/ensuite":      "^1.3.0",
    "@hackbg/spec":         "^1",
    "@hackbg/ubik":         "^1.3.5",
    "@hackbg/dock":         "workspace:^1.3",
    "@hackbg/file":         "workspace:^1",
    "@hackbg/port":         "workspace:^1",
    "@hackbg/cmds":         "workspace:^2",
    "@types/dockerode":     "^3.3.14",
    "@types/node":          "latest",
    "@types/prettyjson":    "^0.0.30",
    "@types/secure-random": "^1.1.0",
    "body-parser":          "^1.20.0",
    "concurrently":         "7.2.2",
    "cross-fetch":          "^3.1.5",
    "express":              "^4.18.1",
    "freeport-async":       "^2.0.0",

    "typescript":  "^5",
    "typedoc":     "^0.23.25",
    "vitepress":   "1.0.0-alpha.10",
    "husky":       "^8.0.3",
    "lint-staged": "^13.1.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "google-protobuf",
        "@types/react",
        "react",
        "react-dom",
        "vitepress",
        "ts-node",
        "@algolia/client-search"
      ],
      "allowedVersions": {
        "typescript": "^4.9"
      }
    }
  },
  "lint-staged": {
    "*.ts": "pnpm check && git add pnpm-lock.yaml && pnpm cov"
  },
  "fadroma": {
    "templates": {
      "example-admin":      "fadroma-example-admin",
      "example-derive":     "fadroma-example-derive-contract-components",
      "example-ensemble":   "fadroma-example-ensemble",
      "example-external":   "fadroma-example-external",
      "example-interface":  "fadroma-example-derive-contract-interface",
      "example-killswitch": "fadroma-example-killswitch",
      "example-kv":         "fadroma-example-kv"
    }
  }
}

{
  "name": "@hackbg/fadroma",
  "version": "2.0.0-rc.1",
  "repository": { "type": "git", "url": "https://github.com/hackbg/fadroma" },
  "type": "module",
  "main": "fadroma.ts",
  "browser": "fadroma.browser.ts",
  "description": "CosmWasm dApp framework.",
  "bin": { "fadroma": "fadroma.cli.cjs" },
  "files": [
    "*.ts",
    "tsconfig.json",
    "Dockerfile",
    "build.impl.mjs",
    "devnets/*",
    "logo.svg",
    "!agent/*",
    "!connect/*",
    "!examples/*",
    "!coverage/*",
    "!target/*",
    "CONTRIBUTING.md",
    "CODE_OF_CONDUCT.md",
    "TROUBLESHOOTING.md",
    "LICENSE"
  ],
  "license": "AGPL-3.0-only",
  "scripts": {
    "build": "./fadroma.cli.cjs build",
    "check": "time tsc --noEmit",
    "ci": "node --version && npm --version && pnpm --version && pwd && ls -al && pnpm cloc && pnpm clean && pnpm check && pnpm cov all && pnpm ubik --dry compile && ls -al",
    "clean": "rm -rf *.cjs.js *.esm.js *.d.ts packages/*/dist packages/*/types",
    "cloc": "cloc --verbose=2 --fullpath --not-match-d=node_modules --not-match-f=pnpm-lock.yaml --exclude-dir=.github,.husky,ensuite,cosmjs-esm,secretjs-esm,coverage,state .",
    "cov":  "time ensuite-cov fadroma.test.ts",
    "docs:dev": "ensuite-dev",
    "docs:render": "time ensuite/ensuite-render.cli.mjs",
    "docs:typedoc": "time typedoc --customCss ./typedoc.css --tsconfig ./tsconfig.json --entryPointStrategy Packages --entryPoints agent --entryPoints connect --entryPoints ensuite --entryPoints ensuite/ganesha --entryPoints ensuite/toolbox --entryPoints .",
    "fadroma": "FADROMA_PROJECT=./examples fadroma",
    "prepare": "husky install",
    "repl": "./fadroma.cli.cjs repl",
    "test": "time ensuite fadroma.test.ts",
    "ubik": "pnpm i && pnpm clean && pnpm check && ubik"
  },
  "dependencies": {
    "@fadroma/agent":   "workspace:2.0.0-rc.1",
    "@fadroma/connect": "workspace:4.0.0-rc.1",
    "@hackbg/cmds":     "workspace:3.0.7",
    "@hackbg/dock":     "workspace:2",
    "@hackbg/file":     "workspace:2.0.0-rc.1",
    "@hackbg/hide":     "workspace:1",
    "@hackbg/logs":     "workspace:2.0.8*",
    "@hackbg/port":     "workspace:1",
    "@hackbg/repo":     "workspace:1.0.0-rc.1",
    "case":             "^1.6.3",
    "dotenv":           "^16.0.1",
    "js-yaml":          "^4.1.0",
    "prompts":          "^2.4.2",
    "simple-git":       "^3.7.1"
  },
  "peerDependencies": {
    "@hackbg/ganesha": "^4"
  },
  "peerDependenciesMeta": {
    "@hackbg/ganesha": { "optional": true }
  },
  "devDependencies": {
    "@fadroma/scrt":   "workspace:*",
    "@fadroma/cw":     "workspace:*",

    "@hackbg/ensuite": "workspace:*",
    "@hackbg/ganesha": "workspace:*",
    "@hackbg/fadroma": "workspace:*",
    "@hackbg/ubik":    "workspace:*",

    "body-parser": "^1.20.0",
    "concurrently": "7.2.2",
    "express": "^4.18.1",
    "freeport-async": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "typedoc": "0.25.3",
    "typescript": "^5.2.2",

    "@types/dockerode": "^3.3.14",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "latest",
    "@types/prettyjson": "^0.0.30",
    "@types/prompts": "^2.4.2",
    "@types/secure-random": "^1.1.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "google-protobuf",
        "@types/react",
        "react",
        "react-dom",
        "vitepress",
        "ts-node",
        "@algolia/client-search"
      ],
      "allowedVersions": {
        "typescript": "^4.9"
      }
    }
  },
  "lint-staged": {
    "*.ts": "pnpm check && git add pnpm-lock.yaml && pnpm cov"
  }
}

{
  "name": "@hackbg/fadroma",
  "version": "1.0.0-beta.49",
  "repository": { "type": "git", "url": "https://github.com/hackbg/fadroma" },
  "type": "module",
  "main": "index.ts",
  "browser": "index.browser.ts",
  "description": "CosmWasm dApp framework.",
  "bin": { "fadroma": "fadroma.cli.cjs" },
  "files": [ "*.ts" ],
  "scripts": {

    "start": "cmds-ts ./fadroma.ts",

    "prepare": "husky install",

    "ubik":  "pnpm i && pnpm clean && pnpm check && ubik",
    "check": "time tsc --noEmit",
    "test":  "time ensuite Fadroma.spec.ts.md",
    "cov":   "time ensuite-cov -r text -n packages -n platforms -n toolbox -- Fadroma.spec.ts.md",
    "lcov":  "time ensuite-cov -r lcov -n packages -n platforms -n toolbox -- Fadroma.spec.ts.md",
    "ci":    "node --version && npm --version && pnpm --version && ls -al && pnpm clean && concurrently npm:check npm:test:cov && pnpm ubik dry && ls -al",
    "clean": "rm -rf *.cjs.js *.esm.js *.d.ts packages/*/dist packages/*/types",

    "build:example": "FADROMA_REBUILD=1 FADROMA_BUILD_WORKSPACE_ROOT=. FADROMA_BUILD_WORKSPACE_MANIFEST=_Cargo.toml FADROMA_BUILD_OUTPUT_DIR=fixtures ./fadroma.cli.cjs build",

    "docs:homepage": "node homepage/render.js",
    "docs:typedoc":  "time typedoc --tsconfig ./tsconfig.json --entryPointStrategy packages --entryPoints packages/* --entryPoints platforms/* --entryPoints .",
    "docs:vp:dev":   "vitepress dev",
    "docs:vp:build": "vitepress build",
    "docs:vp:serve": "vitepress serve"

  },
  "dependencies": {

    "@fadroma/core":    "workspace:^2.0.4",

    "@fadroma/project": "workspace:^1",
    "@fadroma/build":   "workspace:^2.0.6",
    "@fadroma/deploy":  "workspace:^2.0.5",

    "@fadroma/connect": "workspace:^2.1.5",
    "@fadroma/scrt":    "workspace:^8.0.4",
    "@fadroma/devnet":  "workspace:^1.1.5",
    "@fadroma/mocknet": "workspace:^2.0.1",

    "@fadroma/tokens":  "workspace:^7.1.1",

    "@hackbg/4mat": "workspace:^1",
    "@hackbg/file": "workspace:^1",
    "@hackbg/cmds": "workspace:^1.1.4",
    "@hackbg/conf": "workspace:^1",
    "@hackbg/logs": "workspace:^1"

  },
  "peerDependencies": {
    "dotenv":              "^16.0.1",
    "@hackbg/ganesha":     "^2.3.0"
  },
  "peerDependenciesMeta": {
    "dotenv":              { "optional": true },
    "@hackbg/ganesha":     { "optional": true },
    "@fadroma/build":      { "optional": true },
    "@fadroma/deploy":     { "optional": true },
    "@fadroma/devnet":     { "optional": true },
    "@fadroma/scrt":       { "optional": true },
    "@fadroma/scrt-amino": { "optional": true }
  },
  "devDependencies": {
    "@hackbg/ganesha":      "^2.3.0",
    "@hackbg/ensuite":      "^1.1.1",
    "@hackbg/spec":         "^1",
    "@hackbg/ubik":         "^1.3.5",
    "@types/dockerode":     "^3.3.14",
    "@types/js-yaml":       "^4.0.5",
    "@types/node":          "latest",
    "@types/prettyjson":    "^0.0.30",
    "@types/secure-random": "^1.1.0",
    "body-parser":          "^1.20.0",
    "concurrently":         "7.2.2",
    "cross-fetch":          "^3.1.5",
    "express":              "^4.18.1",
    "freeport-async":       "^2.0.0",
    "js-yaml":              "^4.1.0",
    "pug":                  "^3.0.2",

    "typescript":  "^5",
    "typedoc":     "^0.23.25",
    "vitepress":   "1.0.0-alpha.10",
    "husky":       "^8.0.3",
    "lint-staged": "^13.1.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "google-protobuf",
        "@types/react",
        "react",
        "react-dom",
        "vitepress",
        "ts-node",
        "@algolia/client-search"
      ],
      "allowedVersions": {
        "typescript": "^4.9"
      }
    }
  },
  "lint-staged": {
    "*.ts": "pnpm check && pnpm test"
  }
}

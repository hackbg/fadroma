{
  "name": "@hackbg/fadroma",
  "version": "1.0.0-beta.26",
  "repository": {
    "type": "git",
    "url": "https://github.com/hackbg/fadroma"
  },
  "type": "module",
  "main": "fadroma.ts",
  "browser": "fadroma.browser.ts",
  "description": "CosmWasm dApp framework.",
  "bin": {
    "fadroma":         "fadroma.cli.cjs",
    "fadroma-build":   "packages/build/build.cli.cjs",
    "fadroma-connect": "packages/connect/connect.cli.cjs",
    "fadroma-deploy":  "packages/deploy/deploy.cli.cjs",
    "fadroma-devnet":  "packages/devnet/devnet.cli.cjs"
  },
  "files": [
    "packages/build/build.cli.cjs",
    "packages/deploy/deploy.cli.cjs"
  ],
  "scripts": {
    "ubik": "pnpm i && pnpm ts:clean && pnpm ts:check && ubik",

    "rs:build:example": "FADROMA_REBUILD=1 FADROMA_BUILD_WORKSPACE_ROOT=. FADROMA_BUILD_WORKSPACE_MANIFEST=_Cargo.toml FADROMA_BUILD_OUTPUT_DIR=fixtures ./fadroma.cli.cjs build",

    "ts:ci":            "node --version && npm --version && pnpm --version && ls -al && pnpm ts:clean && concurrently npm:ts:check npm:ts:test:cov && pnpm release:dry && ls -al",
    "ts:clean":         "rm -rf *.cjs.js *.esm.js *.d.ts packages/*/dist packages/*/types",
    "ts:check":         "time tsc --noEmit",
    "ts:test":          "time ensuite fadroma.spec.ts.md",
    "ts:test:cov":      "time ensuite-cov -r text -n packages -n platforms -n toolbox -- fadroma.spec.ts.md",
    "ts:test:lcov":     "time ensuite-cov -r lcov -n packages -n platforms -n toolbox -- fadroma.spec.ts.md",
    "ts:test:build":    "./packages/build/build.ts",
    "ts:test:build:kv": "./packages/build/build.ts examples/kv",

    "docs:homepage": "node homepage/render.js",
    "docs:typedoc":  "time typedoc --tsconfig ./tsconfig.json --entryPointStrategy packages --entryPoints packages/* --entryPoints platforms/* --entryPoints .",
    "docs:vp:dev":   "vitepress dev",
    "docs:vp:build": "vitepress build",
    "docs:vp:serve": "vitepress serve"
  },
  "dependencies": {
    "@fadroma/core":       "workspace:^1",
    "@fadroma/connect":    "workspace:^2",
    "@fadroma/mocknet":    "workspace:^2",
    "@fadroma/tokens":     "workspace:^5.1",
    "@fadroma/build":      "workspace:^2",
    "@fadroma/deploy":     "workspace:^2",
    "@fadroma/devnet":     "workspace:^1",
    "@fadroma/scrt":       "workspace:^6",
    "@hackbg/4mat": "workspace:^1",
    "@hackbg/file": "workspace:^1",
    "@hackbg/cmds": "workspace:^1",
    "@hackbg/conf": "workspace:^1",
    "@hackbg/logs": "workspace:^1"
  },
  "peerDependencies": {
    "dotenv":              "^16.0.1",
    "@hackbg/ganesha":     "^2.3.0"
  },
  "peerDependenciesMeta": {
    "dotenv":              { "optional": true },
    "@hackbg/ganesha":     { "optional": true },
    "@fadroma/build":      { "optional": true },
    "@fadroma/deploy":     { "optional": true },
    "@fadroma/devnet":     { "optional": true },
    "@fadroma/scrt":       { "optional": true },
    "@fadroma/scrt-amino": { "optional": true }
  },
  "devDependencies": {
    "@hackbg/ensuite": "^1.0.2",
    "@hackbg/runspec": "^2.3.1",
    "@hackbg/ubik":    "^1.1.1",
    "@types/dockerode": "^3.3.9",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^16.11.55",
    "@types/prettyjson": "^0.0.30",
    "@types/secure-random": "^1.1.0",
    "body-parser": "^1.20.0",
    "concurrently": "7.2.2",
    "cross-fetch": "^3.1.5",
    "express": "^4.18.1",
    "freeport-async": "^2.0.0",
    "js-yaml": "^4.1.0",
    "pug": "^3.0.2",
    "typedoc": "^0.22.18",
    "typescript": "^4.7.4",
    "vitepress": "^1.0.0-alpha.10"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "google-protobuf",
        "@types/react",
        "react",
        "react-dom",
        "vitepress",
        "ts-node",
        "@algolia/client-search"
      ],
      "allowedVersions": {
        "typescript": "^4.6||^4.7"
      }
    }
  }
}

{
  "name":    "@hackbg/fadroma",
  "version": "1.0.0",
  "repository": { "type": "git", "url": "https://github.com/hackbg/fadroma" },
  "type":    "module",
  "main":    "fadroma.ts",
  "browser": "fadroma.browser.ts",
  "description": "CosmWasm dApp framework.",
  "dependencies": {
    "dotenv": "^15.0.1",
    "@fadroma/client":            "workspace:^3",
    "@fadroma/client-scrt":       "workspace:^4",
    "@fadroma/client-scrt-amino": "workspace:^4",
    "@fadroma/client-scrt-grpc":  "workspace:^5",
    "@fadroma/ops":               "workspace:^1",
    "@fadroma/ops-scrt":          "workspace:^1",
    "@fadroma/tokens":            "workspace:^2",
    "@hackbg/ganesha":            "workspace:^2.1",
    "@hackbg/dokeres":            "workspace:*",
    "@hackbg/kabinet":            "workspace:*",
    "@hackbg/komandi":            "workspace:^3",
    "@hackbg/konzola":            "workspace:*",
    "@hackbg/formati":            "workspace:*"
  },
  "devDependencies": {
    "typescript":  "^4.7",
    "@types/node": "^16.11.36",
    "typedoc":     "^0.22.17",

    "concurrently":    "7.2.2",
    "@hackbg/ensuite": "workspace:*",
    "c8":              "^7.11.3",

    "body-parser": "^1.20.0",
    "cross-fetch": "^3.1.5",
    "express":     "^4.18.1",
    "freeport-async": "^2.0.0",

    "js-yaml":     "^4.1.0",
    "pug":         "^3.0.2",
    "vitepress":   "1.0.0-alpha.4"
  },
  "scripts": {
    "rs:build:example": "FADROMA_REBUILD=1 FADROMA_BUILD_WORKSPACE_ROOT=. FADROMA_BUILD_WORKSPACE_MANIFEST=_Cargo.toml FADROMA_BUILD_OUTPUT_DIR=fixtures ./fadroma.cjs build",

    "ts:ci":       "concurrently npm:ts:check npm:ts:cov",
    "ts:check":    "tsc --noEmit",
    "ts:test":     "time ensuite SPEC.ts.md",
    "ts:cov":      "Ganesha_NoSourceMap=1 time npx c8 -r text -n packages ensuite SPEC.ts.md",
    "ts:lcov":     "Ganesha_NoSourceMap=1 time npx c8 -r lcov -n packages ensuite SPEC.ts.md",
    "ts:apidocs":  "time typedoc --tsconfig ./tsconfig.json --entryPointStrategy packages --entryPoints packages/* --entryPoints toolbox/dokeres --entryPoints toolbox/kabinet --entryPoints toolbox/portali --entryPoints @hackbg/formati --entryPoints .",
    "ts:homepage": "node homepage/render.js",
    "vp:dev":      "vitepress dev",
    "vp:build":    "vitepress build",
    "vp:serve":    "vitepress serve"
  },
  "bin": {
    "fadroma": "fadroma.cjs"
  },
  "workspace": true,
  "packages": [
    "./packages/*"
  ],
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "google-protobuf",
        "@types/react",
        "react",
        "react-dom",
        "@algolia/client-search"
      ],
      "allowedVersions": {
        "typescript": "^4.6||^4.7"
      }
    }
  }
}

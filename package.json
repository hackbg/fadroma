{
  "name":        "@hackbg/fadroma",
  "version":     "1.0.0-beta.24",
  "repository":  { "type": "git", "url": "https://github.com/hackbg/fadroma" },
  "type":        "module",
  "main":        "fadroma.ts",
  "browser":     "fadroma.browser.ts",
  "description": "CosmWasm dApp framework.",
  "bin": {
    "fadroma":        "fadroma.cli.cjs",
    "fadroma-build":  "packages/build/build.cli.cjs",
    "fadroma-deploy": "packages/deploy/deploy.cli.cjs"
  },
  "files": [
    "packages/build/build.cli.cjs",
    "packages/deploy/deploy.cli.cjs"
  ],
  "scripts": {
    "release:dry":      "pnpm ts:clean && pnpm ts:check && izomorf dry",
    "release:wet":      "pnpm ts:clean && pnpm ts:check && izomorf wet --access=public",
    "release:all:dry":  "pnpm ts:clean && pnpm ts:check && pnpm -r release:dry && izomorf dry",
    "release:all:wet":  "pnpm ts:clean && pnpm ts:check && pnpm -r release:wet && izomorf wet --access=public",

    "rs:build:example": "FADROMA_REBUILD=1 FADROMA_BUILD_WORKSPACE_ROOT=. FADROMA_BUILD_WORKSPACE_MANIFEST=_Cargo.toml FADROMA_BUILD_OUTPUT_DIR=fixtures ./fadroma.cli.cjs build",

    "ts:ci":            "node --version && npm --version && pnpm --version && ls -al && pnpm ts:clean && concurrently npm:ts:check npm:ts:test:cov && pnpm release:dry && ls -al",
    "ts:clean":         "rm -rf *.cjs.js *.esm.js *.d.ts packages/*/dist packages/*/types",
    "ts:check":         "time tsc --noEmit",
    "ts:test":          "time ensuite SPEC.ts.md",
    "ts:test:cov":      "Ganesha_NoSourceMap=1 time npx c8 -r text -n packages ensuite SPEC.ts.md",
    "ts:test:lcov":     "Ganesha_NoSourceMap=1 time npx c8 -r lcov -n packages ensuite SPEC.ts.md",
    "ts:test:build":    "./packages/build/build.ts",
    "ts:test:build:kv": "./packages/build/build.ts examples/kv",

    "docs:homepage":    "node homepage/render.js",
    "docs:typedoc":     "time typedoc --tsconfig ./tsconfig.json --entryPointStrategy packages --entryPoints packages/* --entryPoints platforms/* --entryPoints .",
    "docs:lcov":        "Ganesha_NoSourceMap=1 time npx c8 -r lcov -n packages ensuite SPEC.ts.md",
    "docs:vp:dev":      "vitepress dev",
    "docs:vp:build":    "vitepress build",
    "docs:vp:serve":    "vitepress serve"
  },
  "dependencies": {
    "@fadroma/build":             "workspace:^1",
    "@fadroma/client":            "workspace:^4.1",
    "@fadroma/connect":           "workspace:^1",
    "@fadroma/deploy":            "workspace:^1",
    "@fadroma/devnet":            "workspace:^1",
    "@fadroma/mocknet":           "workspace:^1",
    "@fadroma/scrt":              "workspace:^1",
    "@fadroma/scrt-amino":        "workspace:^1",
    "@fadroma/tokens":            "workspace:^3",
    "@hackbg/dokeres":            "^4.1.0",
    "@hackbg/formati":            "^1.1.1",
    "@hackbg/ganesha":            "^2.2.5",
    "@hackbg/kabinet":            "^3.0.6",
    "@hackbg/komandi":            "^4.2.3",
    "@hackbg/konzola":            "^1.1.1",
    "dotenv": "^16.0.1"
  },
  "devDependencies": {
    "@types/dockerode":     "^3.3.9",
    "@types/node":          "^16.11.36",
    "@types/prettyjson":    "^0.0.30",
    "@types/prompts":       "^2.0.14",
    "@types/secure-random": "^1.1.0",

    "@hackbg/ensuite": "^1",
    "@hackbg/izomorf": "^4.0.3",
    "@hackbg/runspec": "^2.3",

    "body-parser":     "^1.20.0",
    "c8":              "^7.11.3",
    "concurrently":    "7.2.2",
    "cross-fetch":     "^3.1.5",
    "express":         "^4.18.1",
    "freeport-async":  "^2.0.0",
    "js-yaml":         "^4.1.0",
    "pug":             "^3.0.2",
    "typedoc":         "^0.22.17",
    "typescript":      "^4.7",
    "vitepress":       "^1.0.0-alpha.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "google-protobuf",
        "@types/react",
        "react",
        "react-dom",
        "vitepress",
        "ts-node",
        "@algolia/client-search"
      ],
      "allowedVersions": {
        "typescript": "^4.6||^4.7"
      }
    }
  }
}

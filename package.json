{
  "name":         "@hackbg/toolbox",
  "version":      "4.0.0",
  "type":         "module",
  "main":         "index.ts",
  "files":        [ "*.js" ],
  "homepage":     "https://github.com/hackbg/toolbox",
  "bugs":         "https://github.com/hackbg/toolbox/issues",
  "repository":   {"type": "git", "url": "https://github.com/hackbg/toolbox"},
  "license":      "MIT",
  "description":  "Baseline utilities.",
  "dependencies": {
    "@hackbg/dokeres": "workspace:^4",
    "@hackbg/kabinet": "workspace:^3",
    "@hackbg/komandi": "workspace:^3",
    "@hackbg/konzola": "workspace:^1",
    "@hackbg/portali": "workspace:^1",
    "@hackbg/runspec": "workspace:^2",

    "bech32":              "^2.0.0",
    "open":                "^8.0.2",
    "rimraf":              "^3.0.2",
    "signal-exit":         "^3.0.3"
  },
  "devDependencies": {
    "@hackbg/izomorf": "workspace:*",
    "@types/node":     "latest",
    "concurrently":    "7.2.2",
    "typedoc":         "beta",
    "typescript":      "^4.7"
  },
  "scripts": {
    "release:dry":  "pnpm -r release:dry",
    "release:wet":  "pnpm -r release:wet",

    "ts:check":     "tsc --noEmit",
    "ts:clean":     "rm -rf dist packages/*/dist packages/*/types",
    "ts:build":     "npm run ts:clean && concurrently 'npm:ts:build:*'",
    "ts:build:cjs": "ttsc -p tsconfig.cjs.json",
    "ts:build:esm": "tsc -p tsconfig.esm.json",

    "docs:typedoc": "typedoc index.d.ts"
  },
  "workspace": true,
  "packages": [
    "./dokeres",
    "./forkers",
    "./formati",
    "./izomorf",
    "./kabinet",
    "./komandi",
    "./konzola",
    "./runspec"
  ]
}

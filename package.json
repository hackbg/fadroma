{
  "name": "@hackbg/fadroma",
  "version": "2.0.0-rc.13",
  "repository": {
    "type": "git",
    "url": "https://github.com/hackbg/fadroma"
  },
  "type": "module",
  "main": "fadroma.ts",
  "browser": "fadroma.browser.ts",
  "description": "CosmWasm dApp framework.",
  "bin": {
    "fadroma": "fadroma.cli.cjs"
  },
  "files": [
    "LICENSE",
    "CONTRIBUTING.md",
    "CODE_OF_CONDUCT.md",
    "TROUBLESHOOTING.md",
    "MAINTAINERS.md",
    "README.md",
    "*.ts",
    "*.cjs",
    "!Cargo.*",
    "!*.test.ts*",
    "!**/*.test.ts*",
    "tsconfig.json",
    "!typedoc.json",
    "Dockerfile",
    "!agent/*",
    "!assets/*",
    "assets/banner2.svg",
    "!compile/*",
    "!coverage/*",
    "!create/*",
    "!cw/*",
    "!cw/okp4/*",
    "!devnet/*",
    "!evm/*",
    "!ensemble/*",
    "!examples/*",
    "!fixtures/*",
    "!guides/*",
    "!lib/*",
    "!proc/*",
    "!schema/*",
    "!scrt/*",
    "!shim/*",
    "!target/*",
    "!toolbox/*",
    "!wasm/*"
  ],
  "license": "AGPL-3.0-only",
  "scripts": {
    "build": "./fadroma.cli.cjs build",
    "check": "time tsc --noEmit",
    "ci": "node --version && npm --version && pnpm --version && pwd && ls -al && pnpm cloc && pnpm clean && pnpm check && pnpm cov all && pnpm ubik --dry compile && ls -al",
    "clean": "rm -rf *.cjs.js *.esm.js *.d.ts packages/*/dist packages/*/types",
    "cloc": "cloc --verbose=2 --fullpath --not-match-d=node_modules --not-match-f=pnpm-lock.yaml --exclude-dir=.github,.husky,ensuite,cosmjs-esm,secretjs-esm,coverage,state .",
    "cov": "time ensuite-cov fadroma.test.ts",
    "docs:dev": "ensuite-dev",
    "docs:render": "time ensuite/ensuite-render.cli.mjs",
    "docs:typedoc": "time typedoc --customCss ./typedoc.css --tsconfig ./tsconfig.json --entryPointStrategy Packages --entryPoints agent --entryPoints connect --entryPoints ensuite --entryPoints ensuite/ganesha --entryPoints ensuite/toolbox --entryPoints .",
    "docs:typedoc2": "time typedoc --customCss ./typedoc.css --name Fadroma",
    "fadroma": "FADROMA_PROJECT=./examples fadroma",
    "prepare": "husky install",
    "repl": "./fadroma.cli.cjs repl",
    "test": "time ensuite fadroma.test.ts",
    "release": "pnpm i && pnpm clean && pnpm check && pnpm cov all && ubik release --otp 123123",
    "release:fast": "pnpm i && pnpm check && ubik release --otp 123123",
    "release:faster": "pnpm i && ubik release --otp 123123"
  },
  "dependencies": {
    "@fadroma/agent":  "workspace:2.0.0-rc.8",
    "@fadroma/cw":     "workspace:1.0.0-rc.6",
    "@fadroma/scrt":   "workspace:11.0.0-rc.6",
    "@fadroma/create": "workspace:1.0.0-rc.3",

    "@hackbg/cmds": "workspace:^3.2.1",
    "@hackbg/conf": "workspace:*",
    "@hackbg/dock": "workspace:^2.0.5",
    "@hackbg/file": "workspace:*",
    "@hackbg/logs": "workspace:*",
    "@hackbg/port": "workspace:~",
    "@hackbg/repo": "workspace:*",

    "case": "^1.6.3",
    "dotenv": "^16.3.1",
    "prompts": "^2.4.2"
  },
  "peerDependencies": {
    "@hackbg/ganesha": "^4.2.0"
  },
  "peerDependenciesMeta": {
    "@hackbg/ganesha": {
      "optional": true
    }
  },
  "devDependencies": {
    "@hackbg/fadroma":   "workspace:*",

    "@fadroma/compile":  "workspace:1.0.0-rc.2",
    "@fadroma/devnets":  "workspace:1.0.0-rc.1",
    "@fadroma/fixtures": "link:fixtures",

    "@hackbg/ensuite": "workspace:^",
    "@hackbg/ganesha": "workspace:^",
    "@hackbg/ubik":    "workspace:^3.0.0-rc.1",

    "@types/dockerode": "^3.3.23",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "latest",
    "@types/prettyjson": "^0.0.30",
    "@types/prompts": "^2.4.8",
    "@types/secure-random": "^1.1.3",

    "express": "^4.18.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "typedoc": "0.25.3",
    "typescript": "^5.2.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "google-protobuf",
        "@types/react",
        "react",
        "react-dom",
        "vitepress",
        "ts-node",
        "@algolia/client-search"
      ],
      "allowedVersions": {
        "typescript": "^4.9"
      }
    }
  },
  "lint-staged": {
    "*.ts": "pnpm check && git add pnpm-lock.yaml && pnpm cov"
  }
}

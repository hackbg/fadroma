{
  "name":    "@fadroma/agent",
  "version": "2.0.0-rc.1",
  "type":    "module",
  "main":    "agent.ts",
  "files": [ "*.ts", "**/*.ts" ],
  "description": "Isomorphic base layer for implementing dAPI clients. See @fadroma/scrt for Secret Network support.",
  "scripts": {
    "check": "tsc --noEmit",

{
  "include": [ "*.ts" ],
  "compilerOptions": {
    "emit": {
      "outDir": "dist"
    },
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "node"]
  }
}
